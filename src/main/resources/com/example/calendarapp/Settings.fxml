<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="settingsVBox" xmlns="http://javafx.com/javafx/17.0.6" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.calendarapp.SettingsController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>

    <Label text="Time Zone:">
      <padding>
         <Insets bottom="5.0" />
      </padding></Label>
    <ComboBox fx:id="timeZoneComboBox" promptText="Select Time Zone" />

    <Label text="App Theme:">
      <padding>
         <Insets bottom="5.0" top="10.0" />
      </padding></Label>
   <RadioButton fx:id="darkThemeRadioButton" mnemonicParsing="false" text="Dark">
      <padding>
         <Insets bottom="4.0" />
      </padding>
   </RadioButton>
   <RadioButton fx:id="lightThemeRadioButton" mnemonicParsing="false" text="Light" />

    <Button fx:id="saveButton" onAction="#saveSettings" text="Save">
      <VBox.margin>
         <Insets top="10.0" />
      </VBox.margin></Button>
</VBox>
